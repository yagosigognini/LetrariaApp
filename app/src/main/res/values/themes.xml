<resources>
    <style name="Theme.LetrariaApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_dark_blue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/light_pink</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <!-- Surface & Background -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <!-- For light status bar icons on dark status bar -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
